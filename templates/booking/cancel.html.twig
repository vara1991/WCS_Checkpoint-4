{% extends 'base.html.twig' %}

{% block title %}Annulation{% endblock %}

{% block body %}
    <div class="container py-5 col-sm-11 col-md-10 col-lg-5">
        <div class="card bg-light">
            <div class="container px-4 pb-3">
                <h2 class="mb-5 mt-3 text-center">Annulation d'une réservation</h2>
                <span class="bold"> Prénom :</span> {{ firstname }} <br>
                <span class="bold"> Nom :</span> {{ lastname }} <br>
                <span class="bold" >Email :</span> {{ email }} <br>
                <span class="bold">Réservation :</span> {{ booking |date("m/d/Y \\à\\ H:i")}}
                <form method="post" class="pt-3">
                    <button class="btn btn-danger mt-2 mb-4 form-control-lg col-12">{{ button_label|default('Supprimer') }}</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}